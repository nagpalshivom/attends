<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/Black"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ScheduleActivity">

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/day_select"
        android:layout_width="wrap_content"
        android:textDirection="ltr"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton android:id="@+id/mon_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:buttonTint="@color/White"
            android:text="@string/event_day_0" />

        <RadioButton android:id="@+id/tue_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:buttonTint="@color/White"
            android:text="@string/event_day_1" />

        <RadioButton android:id="@+id/wed_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:buttonTint="@color/White"
            android:text="@string/event_day_2" />

        <RadioButton android:id="@+id/thu_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:buttonTint="@color/White"
            android:text="@string/event_day_3" />

        <RadioButton android:id="@+id/fri_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:buttonTint="@color/White"
            android:text="@string/event_day_4" />

        <RadioButton android:id="@+id/sat_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:buttonTint="@color/White"
            android:text="@string/event_day_5" />

        <RadioButton android:id="@+id/sun_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:buttonTint="@color/White"
            android:text="@string/event_day_6" />

    </RadioGroup>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:id="@+id/schedule_list_view"
        android:layout_alignTop="@id/day_select"
        android:layout_toRightOf="@id/day_select"
        android:layout_toEndOf="@id/day_select"
        android:scrollbars="horizontal"
        android:scrollbarThumbHorizontal="@drawable/custom_scroll_schedule"
        android:fadeScrollbars="false"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/schedule_list"
            android:layout_width="fill_parent"
            android:background="@drawable/border_grid"
            android:layout_margin="5dp"
            android:dividerHeight="0dp"
            android:layout_height="wrap_content" />

    </HorizontalScrollView>

</RelativeLayout>
